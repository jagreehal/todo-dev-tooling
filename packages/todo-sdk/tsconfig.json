{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "noEmitOnError": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"]
}
